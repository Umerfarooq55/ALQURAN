<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="info.androidhive.introslider">

    <!-- Permission required for Downloading Files -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permission required for Checking Internet Connection -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Permission required for Reading Writing SD Card/Memory -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:icon="@drawable/icquran"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:theme">
        <activity android:name="com.umerfarooq.AlQuran.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>


        </activity>
        <activity
            android:name="com.umerfarooq.AlQuran.MainActivity"
            android:label="@string/title_activity_welcome"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.umerfarooq.AlQuran.Main2Activity"
            android:label="@string/Main2Activity"
            android:theme="@style/AppTheme" />
        <activity android:name="com.umerfarooq.AlQuran.quran" />
        <activity android:name="com.umerfarooq.AlQuran.ayat" />
        <activity android:name="com.umerfarooq.AlQuran.HadeesActivity" />
        <activity android:name="com.umerfarooq.AlQuran.tafseer" />
        <activity android:name="com.umerfarooq.AlQuran.LangFragments" />
        <activity android:name="com.umerfarooq.AlQuran.Downloadmp3.downloadMain3Activity" />
        <activity
            android:name="com.umerfarooq.AlQuran.Splash.SplashActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <activity android:name="com.umerfarooq.AlQuran.Settingmain.Settings" />
        <activity android:name="com.umerfarooq.AlQuran.Settingmain.SettingmainActivity" />
        <activity
            android:name="com.umerfarooq.AlQuran.popup.popactivity"
            android:label="popup"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.umerfarooq.AlQuran.popup.Sura_popup_Activity"
            android:theme="@style/AppThemepop" />
        <activity android:name="com.umerfarooq.AlQuran.ListView.SuraTranslationEnglish" />
        <activity android:name="com.umerfarooq.AlQuran.ListView.ScreenSlideActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.umerfarooq.AlQuran.Translation.ChooseTranslation"
            android:theme="@style/AppThemepop">
            <intent-filter>
                <action android:name="com.umerfarooq.AlQuran.Translation.ChooseTranslation" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.umerfarooq.AlQuran.Translation.audiomanager"
            android:theme="@style/AppThemepop">
            <intent-filter>
                <action android:name="com.umerfarooq.AlQuran.Translation.audiomanager" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>