<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.umerfarooq.AlQuran.ListView.SuraTranslationEnglish">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarr"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleMarginStart="90dp"
        app:titleTextAppearance="@style/Toolbar.TitleText"/>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerr"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </android.support.v4.view.ViewPager>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="60dp"
        android:clickable="true"
        android:layout_above="@+id/frame_layout"
        android:layout_gravity="bottom|end"
        app:srcCompat="@drawable/ic_expand_more_black_24dp"
        app:backgroundTint="@color/textcolor"
        app:rippleColor="#FFF" />
        <!--app:layout_anchor="@id/viewOne"-->
        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="#FF0000"
        app:rippleColor="#FFF" />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/fab"
        android:layout_marginTop="1000dp"
        android:background="@color/textcolor">

        <ImageView
            android:id="@+id/stop"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_stop_black_24dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/fast_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_fast_rewind_black_24dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/pause"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_pause_black_24dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/fast_forword"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_fast_forward_black_24dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/repeat"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_repeat_black_24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="14dp"
            android:text="@string/audio"
            android:textColor="@color/dot_dark_screen1"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/music"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_audiotrack_black_24dp" />

        <ImageView
            android:id="@+id/play_one"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/ic_play_arrow_black_24dp" />
    </FrameLayout>

</FrameLayout>
